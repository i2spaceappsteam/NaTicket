<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        customfontdemo:cardUseCompatPadding="true"
        customfontdemo:cardElevation="4dp"
        customfontdemo:cardCornerRadius="3dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:id="@+id/layout">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="2">


            <com.NaTicket.n.custom.MyTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textSize="15sp"
                android:text="Confirmed"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                customfontdemo:fontName="GothamRoundedBook_21018.ttf"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_orange_bus"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:id="@+id/bus_image"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.NaTicket.n.custom.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/date"
                    android:text="Sat, 7 June"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorBlock"
                    customfontdemo:fontName="GothamRoundedBook_21018.ttf"/>

                <com.NaTicket.n.custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Reference_No"
                    android:text="Ref:1007800001"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="10dp"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlock"
                    customfontdemo:fontName="GothamRoundedBook_21018.ttf"/>

               </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="From"
                        android:textSize="15sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorBlock"
                        customfontdemo:fontName="GothamRoundedBook_21018.ttf"/>

                    <com.NaTicket.n.custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        android:text="To"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorBlock"
                    customfontdemo:fontName="GothamRoundedBook_21018.ttf"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="20dp"
                    android:src="@drawable/more" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:id="@+id/from_place"
                        android:text="Dwraka Tirumala"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorBlock"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        customfontdemo:fontName="GothamRoundedBook_21018.ttf"/>

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:id="@+id/to_place"
                        android:text="Secunderabad"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/colorBlock"
                        customfontdemo:fontName="GothamRoundedBook_21018.ttf"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
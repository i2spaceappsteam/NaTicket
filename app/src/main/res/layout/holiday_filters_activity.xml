<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_layout"
        android:orientation="vertical">

        <!--  <android.support.v7.widget.Toolbar
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="?actionBarSize"
              android:background="@color/colorPrimary"
              android:id="@+id/toolbar">

              <com.NaTicket.naticket.custom.MyTextViewBold
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Filters"
                  android:layout_gravity="center"
                  android:textSize="20dp"
                  android:id="@+id/toolbar_title"
                  android:textColor="@color/white"
                  customfontdemo:fontName="@string/custom_font"/>
          </android.support.v7.widget.Toolbar>-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">
            <include layout="@layout/content_back_toolbar" />
        </android.support.v7.widget.Toolbar>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/text_primary"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:id="@+id/reset_layout"
        android:layout_alignParentBottom="true">



        <com.NaTicket.n.custom.MyTextViewBold
            android:id="@+id/Clear_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="Reset All"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="20sp"
            customfontdemo:fontName="@string/custom_font"/>

        <View
            android:layout_width="@dimen/flight"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>

        <com.NaTicket.n.custom.MyTextViewBold
            android:id="@+id/Apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="Apply"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="20sp"
            customfontdemo:fontName="@string/custom_font"
            />




    </LinearLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@+id/reset_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/star_rating_layout"
                android:layout_marginBottom="10dp">


                <com.NaTicket.n.custom.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Star Rating"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp"
                    customfontdemo:fontName="@string/custom_font"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="2dp"
                    android:id="@+id/zero_layout">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/zero_star_check"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:rating="0"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="2dp"
                    android:id="@+id/one_layout">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/one_star_check"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:rating="1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="2dp"
                    android:id="@+id/two_layout">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/two_star_check"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:rating="2"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="2dp"
                    android:id="@+id/three_layout">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/three_star_check"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:rating="3"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="2dp"
                    android:id="@+id/four_layout">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/four_star_checked"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:rating="4"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="2dp"
                    android:id="@+id/five_layout">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/five_star_checked"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:rating="5"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="2dp"/>
            </LinearLayout>

            <com.NaTicket.n.custom.MyTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/colorAccent"
                android:layout_margin="10dp"
                customfontdemo:fontName="@string/custom_font"
                android:layout_below="@+id/star_rating_layout"
                android:id="@+id/price_text"/>
            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/rangeSeekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:corner_radius="10"
                app:gap="20"
                app:bar_color="#8990C4"
                app:bar_highlight_color="#2434AD"
                app:left_thumb_color="#1A246D"
                app:right_thumb_color="#1A246D"
                app:left_thumb_color_pressed="#030B47"
                app:right_thumb_color_pressed="#030B47"
                android:layout_below="@+id/price_text"
                app:data_type="_integer"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rangeSeekbar"
                android:weightSum="2"
                android:layout_marginLeft="20dp"
                android:id="@+id/range_bar"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <com.NaTicket.n.custom.MyTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/min_value"
                    android:text="30"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_weight="1"
                    customfontdemo:fontName="@string/custom_font"
                    />


                <com.NaTicket.n.custom.MyTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/max_value"
                    android:text="20"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="end"
                    customfontdemo:fontName="@string/custom_font"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/range_bar"
                android:orientation="vertical"
                >

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="2dp"/>

                <com.NaTicket.n.custom.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp"
                    customfontdemo:fontName="@string/custom_font"
                    android:layout_below="@+id/star_rating_layout" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_box_layout"
                    android:orientation="vertical"



                    />

                <!--   <android.support.v7.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/sub_category_recycle"
                       >


                   </android.support.v7.widget.RecyclerView>-->

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
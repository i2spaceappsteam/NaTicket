<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="8dp"
    android:background="@color/back_ground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
    <com.NaTicket.n.custom.MyTextView
        android:id="@+id/roomNoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room - 1"

        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_weight="1.0"
        customfontdemo:fontName="GothamRoundedBook_21018.ttf" />
    <ImageView
        android:id="@+id/removeRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">
            <ImageView
                android:id="@+id/adultRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.NaTicket.n.custom.MyTextView
                    android:id="@+id/noadultTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"


                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:padding="2dp"
                    customfontdemo:fontName="GothamRoundedBook_21018.ttf" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_adult"/>
                <com.NaTicket.n.custom.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adults"
                    android:padding="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"

                    customfontdemo:fontName="GothamRoundedBook_21018.ttf" />



            </LinearLayout>

            <ImageView
                android:id="@+id/adultAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">
            <ImageView
                android:id="@+id/childRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.NaTicket.n.custom.MyTextView
                    android:id="@+id/nochildTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"


                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:padding="2dp"
                    customfontdemo:fontName="GothamRoundedBook_21018.ttf" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_child"
                    />
                <com.NaTicket.n.custom.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child"
                    android:padding="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"

                    customfontdemo:fontName="GothamRoundedBook_21018.ttf" />



            </LinearLayout>

            <ImageView
                android:id="@+id/childAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>

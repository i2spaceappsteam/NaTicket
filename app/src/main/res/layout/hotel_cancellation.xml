<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">
            <include layout="@layout/content_back_toolbar" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView

                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.NaTicket.n.custom.MyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Ref No :"
                        android:id="@+id/tvRefNo"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_margin="15dp"
                        customfontdemo:fontName="@string/custom_font"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/view12"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/hotel_small"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:id="@+id/tvHtlName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=""
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="8dp"
                            android:textAlignment="textStart"
                            customfontdemo:fontName="@string/custom_font"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/blu_pointer"/>

                        <com.NaTicket.n.custom.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=""
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:id="@+id/tvHtlAddress"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textAlignment="textStart"
                            customfontdemo:fontName="@string/custom_font"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="20dp">

                            <com.NaTicket.n.custom.MyTextViewBold
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Check In"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                customfontdemo:fontName="@string/custom_font" />


                            <com.NaTicket.n.custom.MyTextViewBold
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Check Out"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textColor="@color/colorAccent"
                                customfontdemo:fontName="@string/custom_font" />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="5dp"
                            android:background="@color/Transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@color/Transparent"
                                >


                                <com.NaTicket.n.custom.MyTextView

                                    android:id="@+id/tvCheckinDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@drawable/ic_cal"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    customfontdemo:fontName="@string/custom_font" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@color/Transparent"
                                >


                                <com.NaTicket.n.custom.MyTextView

                                    android:id="@+id/tvCheckoutDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@drawable/ic_cal"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    customfontdemo:fontName="@string/custom_font" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>








                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/view"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp">

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Night(s)"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            customfontdemo:fontName="@string/custom_font" />
                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Room(s)"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            customfontdemo:fontName="@string/custom_font" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.NaTicket.n.custom.MyTextView
                            android:id="@+id/tvNoOfDays"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="15sp"
                            android:textColor="@color/colorAccent"
                            android:gravity="center"
                            customfontdemo:fontName="@string/custom_font" />
                        <com.NaTicket.n.custom.MyTextView
                            android:id="@+id/tvNoOfRoms"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/colorAccent"
                            android:text=""
                            android:textSize="15sp"
                            android:gravity="center"
                            customfontdemo:fontName="@string/custom_font" />



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="2">

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Total fare"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            customfontdemo:fontName="@string/custom_font"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="0"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:id="@+id/Total_fare"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawablePadding="15dp"
                            customfontdemo:fontName="@string/custom_font"/>
                    </LinearLayout>





                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <com.NaTicket.n.custom.MyTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancellation Policy"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    customfontdemo:fontName="@string/custom_font"
                    />
                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardBackgroundColor="@color/colorAccent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView21"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp">

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Cancellation time"
                            android:id="@+id/textView22"
                            android:textColor="@color/white"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            customfontdemo:fontName="@string/custom_font"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="charges"
                            android:textColor="@color/white"
                            android:layout_alignTop="@+id/textView22"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            android:visibility="gone"
                            customfontdemo:fontName="@string/custom_font"/>

                        <com.NaTicket.n.custom.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=""
                            android:id="@+id/Cancellation_policy"
                            android:textColor="@color/white"
                            android:layout_below="@+id/textView22"
                            android:layout_alignLeft="@+id/textView22"
                            android:layout_alignStart="@+id/textView22"
                            android:layout_marginTop="10dp"
                            android:textAlignment="textStart"
                            customfontdemo:fontName="@string/custom_font"/>
                        <com.NaTicket.n.custom.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=""
                            android:textAlignment="textStart"
                            android:id="@+id/Cancellation_Mode"
                            android:textColor="@color/white"
                            android:layout_below="@+id/Cancellation_policy"
                            android:layout_marginTop="10dp"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="20dp"
                            customfontdemo:fontName="@string/custom_font"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <com.NaTicket.n.custom.MyTextViewBold
                    android:id="@+id/Cancel_Ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CancelTicket"
                    android:padding="15dp"
                    android:gravity="center"
                    android:background="@drawable/primary_background_button"
                    android:textColor="@android:color/white"
                    android:layout_margin="15dp"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    customfontdemo:fontName="@string/custom_font" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
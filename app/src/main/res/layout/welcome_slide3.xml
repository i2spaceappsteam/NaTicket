<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAqua"
    android:gravity="center"
    android:weightSum="10">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:src="@drawable/welcome_side1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <com.NaTicket.n.custom.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:text="Smart Search"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textAlignment="center"
        customfontdemo:fontName="@string/custom_font"/>

    <com.NaTicket.n.custom.MyTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Search by Destination,Date,\nNumber of people &amp;\n many more criteria"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        customfontdemo:fontName="@string/custom_font"/>




</LinearLayout>
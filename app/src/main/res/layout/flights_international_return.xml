<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp">

                        <ImageView
                            android:id="@+id/spirte"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/flightName_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Jet Airways"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="12dp"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="2sp"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/Flight_ID_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="9w- 4176"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12dp"
                                android:textColor="@color/text_secondary"
                                customfontdemo:fontName="@string/custom_font" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.NaTicket.n.custom.MyTextView
                                    android:id="@+id/Flight_TImes_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="20:15 - 20:15 "
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="12dp"
                                    android:textColor="@color/text_primary"
                                    customfontdemo:fontName="@string/custom_font" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.NaTicket.n.custom.MyTextView
                                    android:id="@+id/Flight_Duritation_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2h 25m | Non-Stop"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="12dp"
                                    android:textColor="@color/text_secondary"
                                    customfontdemo:fontName="@string/custom_font" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="end">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/Flight_NetFare_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="INR 5000"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="12dp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="end">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/Flight_Refundable_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Non-Refundable"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/text_secondary"
                                customfontdemo:fontName="@string/custom_font" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/Flight_RPH_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Coupon"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_secondary"
                        android:textStyle="normal"
                        android:visibility="gone"
                        customfontdemo:fontName="@string/custom_font" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp"
            android:id="@+id/line1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp">

                        <ImageView
                            android:id="@+id/ret_spirte"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/ret_flightName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Jet Airways"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="12dp"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="2sp"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/ret_Flight_ID"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="9w- 4176"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12dp"
                                android:textColor="@color/text_secondary"
                                customfontdemo:fontName="@string/custom_font" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.NaTicket.n.custom.MyTextView
                                    android:id="@+id/ret_Flight_TImes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="20:15 - 20:15 "
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="12dp"
                                    android:textColor="@color/text_primary"
                                    customfontdemo:fontName="@string/custom_font" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.NaTicket.n.custom.MyTextView
                                    android:id="@+id/ret_Flight_Duritation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2h 25m | Non-Stop"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="12dp"
                                    android:textColor="@color/text_secondary"
                                    customfontdemo:fontName="@string/custom_font" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="end">

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="INR 50000"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="12dp"
                                android:visibility="gone"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="end">

                            <com.NaTicket.n.custom.MyTextView
                                android:id="@+id/ret_Flight_Refundable"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Non-Refundable"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/text_secondary"
                                customfontdemo:fontName="@string/custom_font" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Coupon"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_secondary"
                        android:textStyle="normal"
                        android:visibility="gone"
                        customfontdemo:fontName="@string/custom_font" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
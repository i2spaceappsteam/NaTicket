<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.NaTicket.n.holidays.ReviewHolidayActivity"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:showIn="@layout/activity_review_holiday"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/hotelImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/hotelNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="HotelName"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <RatingBar
                        android:id="@+id/holidayRating"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:rating="4.5" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/hotelDescTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text=""
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text=""
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.NaTicket.n.custom.MyTextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Travel Date : "
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/checkinTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17 Jun"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/lightblack"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/totalRoomTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Room : 2"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical">

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/totalAdultsTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Adults : 2"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/totalChildTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:text="Child : 2"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:orientation="vertical"
                android:padding="8dp">

                <com.NaTicket.n.custom.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Payment Details :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    customfontdemo:fontName="@string/custom_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingLeft="5dp"
                        android:text="Package Total"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/roomcharges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="0.0"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingLeft="5dp"
                        android:text="Service Charge"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/roomTaxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="0.0"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/conviinence_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingLeft="5dp"
                        android:text="Convenience Fee"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/conveniencefee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="0.0"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/promo_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingLeft="5dp"
                        android:text="Discount Amount"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="0.0"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingLeft="5dp"
                        android:text="You Pay"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/roomTotalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="0.0"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/promo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/have_a_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Have a Promocode ?"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        customfontdemo:fontName="@string/custom_font" />

                    <LinearLayout
                        android:id="@+id/promo_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:weightSum="1">

                        <com.NaTicket.n.custom.MyEdiTextBold
                            android:id="@+id/promocode_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@drawable/background_left_promo"
                            android:hint="Enter Promo Code"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textSize="15sp"
                            customfontdemo:fontName="@string/custom_font" />

                        <com.NaTicket.n.custom.MyTextView
                            android:id="@+id/promo_apply"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.4"
                            android:background="@drawable/background_reverse_right_promo"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="Apply"
                            android:textColor="@color/colorWhite"
                            android:textSize="17sp"
                            customfontdemo:fontName="@string/custom_font" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">


                <com.NaTicket.n.custom.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="Guest Details :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    customfontdemo:fontName="@string/custom_font" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/backgroundforrg"
                        android:padding="5dp">

                        <Spinner
                            android:id="@+id/surname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <com.NaTicket.n.custom.MyEdiText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/backgroundforrg"
                        android:hint="First Name"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textSize="15sp"
                        customfontdemo:fontName="@string/custom_font" />

                </LinearLayout>

                <com.NaTicket.n.custom.MyEdiText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/backgroundforrg"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textSize="15sp"
                    customfontdemo:fontName="@string/custom_font" />

                <com.NaTicket.n.custom.MyEdiText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backgroundforrg"
                    android:hint="E Mail"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textSize="15sp"
                    customfontdemo:fontName="@string/custom_font" />

                <com.NaTicket.n.custom.MyEdiText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backgroundforrg"
                    android:hint="Mobile No."
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:maxLength="10"
                    customfontdemo:fontName="@string/custom_font" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/checkboxAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree to "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.NaTicket.n.custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="  Terms &amp; Conditions"
                    android:textColor="@color/black_overlay"
                    android:textSize="15sp"
                    customfontdemo:fontName="segoeui.ttf" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <com.NaTicket.n.custom.MyTextView
        android:id="@+id/proceedTopay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed To Pay"
        android:padding="15dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        customfontdemo:fontName="@string/custom_font" />

</LinearLayout>

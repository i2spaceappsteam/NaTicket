<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">
            <include layout="@layout/content_back_toolbar" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView

                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Ref No: 1234567890"
                        android:id="@+id/Enter_reference_no"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_margin="15dp"
                        customfontdemo:fontName="@string/custom_font"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/view12"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/blu_pointer"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:id="@+id/route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Hyderabad to Banglore"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="8dp"
                            customfontdemo:fontName="@string/custom_font"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/blu_cal"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Thursday, Oct 23, 2017"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:id="@+id/journey_date"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            customfontdemo:fontName="@string/custom_font"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/blu_bus"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Orange Tours and Travels"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:id="@+id/operator_name"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            customfontdemo:fontName="@string/custom_font"/>
                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/view"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="2">

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Total fare"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            customfontdemo:fontName="@string/custom_font"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="INR 11300000.0"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:id="@+id/Total_fare"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawablePadding="15dp"
                            customfontdemo:fontName="@string/custom_font"/>
                    </LinearLayout>

                    <com.NaTicket.n.custom.MyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Seat numbers:"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        customfontdemo:fontName="@string/custom_font"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ToggleButton
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:background="@drawable/green_seat"
                                android:id="@+id/seat1"
                                android:textOn="@null"
                                android:textOff="@null"
                                android:gravity="center"
                                android:layout_gravity="center"
                                />

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="32"
                                android:gravity="center"
                                android:id="@+id/seat_num1"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="5dp"
                                customfontdemo:fontName="@string/custom_font"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <ToggleButton
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:background="@drawable/green_seat"
                                android:id="@+id/seat2"
                                android:textOn="@null"
                                android:textOff="@null"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                />

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="33"
                                android:gravity="center"
                                android:id="@+id/seat_num2"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/text_primary"
                                android:visibility="gone"
                                customfontdemo:fontName="@string/custom_font"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <ToggleButton
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:background="@drawable/green_seat"
                                android:id="@+id/seat3"
                                android:textOn="@null"
                                android:textOff="@null"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                />

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="34"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_marginTop="5dp"
                                android:id="@+id/seat_num3"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <ToggleButton
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:background="@drawable/green_seat"
                                android:id="@+id/seat4"
                                android:textOn="@null"
                                android:visibility="gone"
                                android:textOff="@null"
                                android:gravity="center"
                                android:layout_gravity="center"
                                />

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="35"
                                android:gravity="center"
                                android:id="@+id/seat_num4"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <ToggleButton
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:background="@drawable/green_seat"
                                android:id="@+id/seat5"
                                android:textOn="@null"
                                android:visibility="gone"
                                android:textOff="@null"
                                android:gravity="center"
                                android:layout_gravity="center"
                                />

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="36"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:id="@+id/seat_num5"
                                android:visibility="gone"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <ToggleButton
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:background="@drawable/green_seat"
                                android:id="@+id/seat6"
                                android:textOn="@null"
                                android:textOff="@null"
                                android:visibility="gone"
                                android:gravity="center"
                                android:layout_gravity="center"
                                />

                            <com.NaTicket.n.custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="37"
                                android:gravity="center"
                                android:id="@+id/seat_num6"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:textColor="@color/text_primary"
                                customfontdemo:fontName="@string/custom_font"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <com.NaTicket.n.custom.MyTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancellation Policy"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    customfontdemo:fontName="@string/custom_font"
                    />
                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardBackgroundColor="@color/colorAccent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView21"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp">

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Cancellation time"
                            android:id="@+id/textView22"
                            android:textColor="@color/white"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            customfontdemo:fontName="@string/custom_font"/>

                        <com.NaTicket.n.custom.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="charges"
                            android:textColor="@color/white"
                            android:layout_alignTop="@+id/textView22"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            customfontdemo:fontName="@string/custom_font"/>

                        <com.NaTicket.n.custom.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="24 Hours before Journey time"
                            android:id="@+id/Cancellation_policy"
                            android:textColor="@color/white"
                            android:layout_below="@+id/textView22"
                            android:layout_alignLeft="@+id/textView22"
                            android:layout_alignStart="@+id/textView22"
                            android:layout_marginTop="10dp"
                            customfontdemo:fontName="@string/custom_font"/>
                        <com.NaTicket.n.custom.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Partial"
                            android:id="@+id/Partial"
                            android:textColor="@color/white"
                            android:layout_below="@+id/Cancellation_policy"
                            android:layout_marginTop="10dp"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="20dp"
                            customfontdemo:fontName="@string/custom_font"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <com.NaTicket.n.custom.MyTextViewBold
                    android:id="@+id/Ticket_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CancelTicket"
                    android:padding="15dp"
                    android:gravity="center"
                    android:background="@drawable/primary_background_button"
                    android:textColor="@android:color/white"
                    android:layout_margin="15dp"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    customfontdemo:fontName="@string/custom_font" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
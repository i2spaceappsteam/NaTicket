<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.NaTicket.n.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adults"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                customfontdemo:fontName="@string/custom_font" />

            <com.NaTicket.n.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12+ years"
                android:textSize="15sp"
                android:textAlignment="center"
                customfontdemo:fontName="@string/custom_font"/>


            <ImageView
                android:layout_marginTop="10sp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aero"
                android:layout_gravity="center"
                android:tint="@color/grey"
                android:visibility="visible"/>


            <NumberPicker
                android:id="@+id/numberPickerAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:descendantFocusability="blocksDescendants"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aero"
                android:layout_gravity="center"
                android:tint="@color/grey"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.NaTicket.n.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Children"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                customfontdemo:fontName="@string/custom_font"/>

            <com.NaTicket.n.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2-12 years"
                android:textSize="15sp"
                android:textAlignment="center"
                customfontdemo:fontName="@string/custom_font"/>


            <ImageView
                android:layout_marginTop="10sp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aero"
                android:layout_gravity="center"
                android:tint="@color/grey"
                android:visibility="visible"/>

            <NumberPicker
                android:id="@+id/numberPickerChildren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:descendantFocusability="blocksDescendants" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aero"
                android:layout_gravity="center"
                android:tint="@color/grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.NaTicket.n.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Infants"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                customfontdemo:fontName="@string/custom_font"/>

            <com.NaTicket.n.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0-2 years"
                android:textSize="15sp"
                android:textAlignment="center"
                customfontdemo:fontName="@string/custom_font"/>


            <ImageView
                android:layout_marginTop="10sp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aero"
                android:layout_gravity="center"
                android:tint="@color/grey"
                android:visibility="visible"/>

            <NumberPicker
                android:id="@+id/numberPickerInfant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:descendantFocusability="blocksDescendants" />

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_aero"
                android:layout_gravity="center"
                android:tint="@color/grey"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <com.NaTicket.n.custom.MyTextView
            android:id="@+id/CancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            customfontdemo:fontName="@string/custom_font" />
        <com.NaTicket.n.custom.MyTextView
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            customfontdemo:fontName="@string/custom_font"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hotel_back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.NaTicket.n.hotels.HotelSearchActivity"
    tools:showIn="@layout/activity_hotel_search"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.NaTicket.n.custom.MyTextView
                    android:id="@+id/domestic"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_left"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Domestic"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    customfontdemo:fontName="@string/custom_font" />

                <com.NaTicket.n.custom.MyTextView
                    android:id="@+id/interantional"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_right"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="International"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    customfontdemo:fontName="@string/custom_font" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/whichCityTv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/background_main"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_point" />

                <com.NaTicket.n.custom.MyTextView
                    android:id="@+id/cityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingLeft="5dp"
                    android:text="Select City"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    customfontdemo:fontName="@string/custom_font" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_ic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_main"
                android:gravity="center_vertical"
                android:padding="5dp">

                <com.NaTicket.n.custom.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/nationalityspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="36dp" />
            </LinearLayout>


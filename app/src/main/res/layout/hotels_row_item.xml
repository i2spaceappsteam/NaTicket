<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        customfontdemo:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_placeholder"
                android:layout_weight="2.5"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:id="@+id/hotelIv"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <com.NaTicket.n.custom.MyTextViewBold

                        android:id="@+id/hotelNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Hotel Taj"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        customfontdemo:fontName="@string/custom_font" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom">


                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="15sp"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        customfontdemo:fontName="@string/custom_font" />


                    <RatingBar
                        android:id="@+id/hotelRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:rating="4.5"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp">


                    <com.NaTicket.n.custom.MyTextView
                        android:id="@+id/hotelDescTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:text="#Apollo building , Near sdaf "
                        customfontdemo:fontName="@string/custom_font" />


                </LinearLayout>
                <com.NaTicket.n.custom.MyTextView
                    android:id="@+id/deals"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textSize="12dp"
                    android:text="2 Deals from INR 10,240"
                    customfontdemo:fontName="@string/custom_font" />






            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.5"
                android:gravity="end"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp">

                <com.NaTicket.n.custom.MyTextViewBold
                    android:id="@+id/costTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="INR 10,240"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlock"
                    android:textSize="12sp"
                    customfontdemo:fontName="@string/custom_font" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    >

                    <com.NaTicket.n.custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="6dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Select"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="15dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        customfontdemo:fontName="@string/custom_font"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>